<Page x:Class="yz.gaming.accessoryapp.View.ControllerPage.ShakePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yz.gaming.accessoryapp.View.ControllerPage"
      xmlns:controls="clr-namespace:yz.gaming.accessoryapp.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShakePageView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" />
        <Grid Grid.Row="1">
            <controls:ThirdRadioListItem x:Name="Shake"
                                         IconPath="pack://SiteOfOrigin:,,,/Resource/Image/Shake.png"
                                         LeftText="{DynamicResource Strong}"
                                         CenterText="{DynamicResource Weak}"
                                         RightText="{DynamicResource Off}"
                                         Text="{DynamicResource Shake}"/>
         </Grid>
        <Viewbox Grid.Row="2"/>
    </Grid>
</Page>

<Window x:Class="AutoUpdaterApp.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updating" Height="150" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="progressText" HorizontalAlignment="Center" Margin="10" FontSize="16">Downloading...</TextBlock>
        <ProgressBar Name="downloadProgress" Height="20" Width="300" Maximum="100"/>
        <TextBlock Name="percentageText" HorizontalAlignment="Center" Margin="10" FontSize="16">0%</TextBlock>
    </StackPanel>
</Window>



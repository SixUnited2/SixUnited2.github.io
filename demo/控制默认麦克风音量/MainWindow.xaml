<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="麦克风音量控制" Height="150" Width="400">
	<Grid>
		<Slider x:Name="micphoneSlider" Minimum="0" Maximum="100" VerticalAlignment="top" Margin="10,10" Value="50"/>
        <Slider x:Name="speakerSlider" Minimum="0" Maximum="100" VerticalAlignment="top" Margin="10,50,10,10" Value="50"/>
		<Button Content="设置音量" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,100,56,0" Click="OnSetVolume"/>
	</Grid>
</Window>
